<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- services -->
        <parameter key="vaderlab.eav.core.service.entity.entity_service.id" >vaderlab.eav.core.service.entity.entity_service_orm</parameter>
        <!-- end services -->
    </parameters>

    <services>
        <!--
        <service id="doctrine.orm.default_entity_manager" alias="Vaderlab\EAV\Core\Service\ORM\EntityManager">
        </service>
        -->
        <service id="Vaderlab\EAV\Core\Service\ORM\EntityManager"
                 public="true"
                 decorates="doctrine.orm.entity_manager"
                 decoration-priority="1">
            <argument type="service" id="Vaderlab\EAV\Core\Service\ORM\EntityManager.inner"/>
            <argument type="service" id="vaderlab.eav.core.service.reflection.class_to_entity_resolver" />
            <argument type="service" id="vaderlab.eav.core.service.reflection.entity_to_class_resolver" />
        </service>

        <service class="Vaderlab\EAV\Core\Service\Entity\EntityServiceORM"
                 id="vaderlab.eav.core.service.entity.entity_service_orm">
            <argument type="service" id="doctrine" />
            <argument type="service" id="vaderlab.eav.core.service.data_type.data_type_provider" />
            <argument type="string">Vaderlab\EAV\Core\Entity\Entity</argument>
        </service>

        <service id="Vaderlab\EAV\Core\Service\Entity\EntityServiceFactory" public="true">
            <argument type="service" id="vaderlab.eav.core.service.entity.entity_service_orm" />
        </service>

    </services>
</container>